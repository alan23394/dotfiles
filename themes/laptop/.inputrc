# Alan Barnett
# My .inputrc file, for readline config

# General settings
set colored-completion-prefix on
set colored-stats on

# Vim settings
set editing-mode vi
set show-mode-in-prompt on
set vi-ins-mode-string "\1\e[5 q\e[1;35m\2+\1\e[0m\2"
set vi-cmd-mode-string "\1\e[1 q\e[0;35m\2:\1\e[0m\2"

# Bindings
"\C-xr": re-read-init-file
"\C-l": clear-screen

# Commands
"\C-f": "ls\n"
