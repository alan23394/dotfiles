! Settings {{{

! xterm terminal name
xterm*termName: xterm-256color

! Every shell is a login shell
xterm*loginShell: true

! xterm default size (I think)
xterm*vt100*geometry: 80x50

! Scrollback
xterm*saveLines: 2000
URxvt.saveLines: 16834

! I do not know what these are for
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
xterm*eightBitInput: false

! }}}

! Appearance settings {{{

URxvt.scrollBar: false

! Settings for false transparency
!urxvt*transparent: true
!urxvt*shading: 50

! true transparency
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0000/6666

! }}}

! Font {{{

! xterm
xterm*font: xft:xos4 Terminus:style=Regular:size=12
xterm*boldFont: xft:xos4 Terminus:style=Regular:size=12
xterm*faceSize: 12

! urxvt
! Terminus
!URxvt*font: xft:xos4 Terminus:style=Regular:size=12
!URxvt*boldFont: xft:xos4 Terminus:style=Regular:size=12
! Gohufont
URxvt*font: xft:Gohu GohuFont:style=Regular:size=12
URxvt*boldFont: xft:Gohu GohuFont:style=Regular:size=12

! xft settings
Xft.dpi:        72
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

! URxvt Resize Font
URxvt.perl-ext-common:		resize-font
URxvt.keysym.C-minus:		resize-font:smaller
URxvt.keysym.C-plus:		resize-font:bigger
URxvt.keysym.C-equal:		resize-font:reset
URxvt.keysym.C-question:	resize-font:show

! }}}

