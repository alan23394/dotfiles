# Lock screen
super + alt + q
	i3lock -c 000000; systemctl suspend

# Programs {{{
# floating termite
super + grave
	termite --name=floating_terminal

# my default terminal
super + Return
	myterm

# my default terminal with nvim term started
super + shift + Return
	myterm -e nvim -c term -c "start"

# qutebrowser
super + b
	qutebrowser

# iceweasel
super + shift + b
	firefox
# }}}

# volume controls {{{
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
	setv {+,-}2
ctrl + {XF86AudioStop, XF86AudioPlay}
	setv {+,-}1

{XF86AudioMute, super + m}
	setv toggle
# }}}

# mpc controls
{XF86AudioPlay, XF86AudioStop}
	mpc {toggle, stop}; pkill -RTMIN+1 i3blocks
{XF86AudioNext, XF86AudioPrev}
	mpc {next, prev}

# vim: foldmethod=marker foldmarker={{{,}}}
