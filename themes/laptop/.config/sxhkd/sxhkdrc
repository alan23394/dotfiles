# Lock screen
super + alt + q
	i3lock -c 000000

# Programs {{{
# floating termite
super + grave
	termite --name=floating_terminal

# my default terminal
super + Return
	myterm

# my default terminal with nvim term started
super + shift + Return
	myterm -e nvim term:///bin/bash -c "start"

# qutebrowser
super + b
	qutebrowser

# iceweasel
super + shift + b
	iceweasel
# }}}

# volume controls {{{
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
	pactl set-sink-volume 0 {+2%, -2%} | pkill -RTMIN+2 i3blocks
ctrl + {XF86AudioStop, XF86AudioPlay}
	pactl set-sink-volume 0 {+1%, -1%} | pkill -RTMIN+2 i3blocks

{XF86AudioMute, super + m}
	pactl set-sink-mute 0 toggle | pkill -RTMIN+2 i3blocks
# }}}

# mpc controls
{XF86AudioPlay, XF86AudioStop
	mpc {toggle, stop}; pkill -RTMIN+1 i3blocks
{XF86AudioNext, XF86AudioPrev}
	mpc {next, prev}

# vim: foldmethod=marker foldmarker={{{,}}}
