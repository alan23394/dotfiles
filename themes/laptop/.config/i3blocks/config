# MPD playing song
# uses mpc to get the current song
#
[music]
command=mpc current
interval=once
signal=1

# Processor core temperatures
#
[cpu_temp]
interval=5
min_width=0: xx.x 1: xx.x

# Network status
# shows ip address of interface
#
[network]
interface=wlp2s0
interval=10

# Battery indicator
#
[battery]
interval=10

# Volume indicator
#
[volume]
color_good=#4ad850
color_bad=#346a42
style=normal
interval=10
signal=2

## Date block
##
#[date]
#color=#3456ac
#command=date +"%-m/%d"
#separator=false
#interval=10

# Date Time
#
[time]
color=#7478a6
# string for the date portion (no + necessary at the beginning)
date_string=%-m/%d
# style can be either normal, or decimal
# the style can be overridden in the time_style file in this directory
style=normal
interval=1

