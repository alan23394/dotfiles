set nu rnu so=10 ruler background=dark splitbelow splitright

set foldmethod=marker foldmarker=/*,*/ foldcolumn=2

highlight ExtraWhitespace ctermbg=darkgreen
call matchadd('ExtraWhitespace', '\s\+$\| \+\ze\t\|\t\zs \+')
highlight OverLength ctermbg=red ctermfg=white
call matchadd('OverLength', '\%81v.\+')

syntax on

" autocmd
autocmd BufRead *.o edit *.c
autocmd BufRead Makefile setlocal foldmethod=manual

" inoremap
inoremap {} {<Enter>}<Esc>O
inoremap jk <Esc>
inoremap \fps ft_putstr(
inoremap \fpe ft_putendl(
inoremap \fpc ft_putchar(
inoremap \fpcn ft_putchar('\n');
inoremap \fpn ft_putnbr(
inoremap \ftp ft_printf("
inoremap \pr printf("

" nnoremap
nnoremap \r :set relativenumber!<Enter>
nnoremap \nu :set nu rnu<Enter>
nnoremap \no :12sp ~/notes<Enter>
nnoremap \c I//<Esc>
nnoremap \C I<Del><Del><Esc>
nnoremap \wt owrite(1,"t",1);<Esc>
nnoremap <C-h> <C-w><C-h>
nnoremap <C-j> <C-w><C-j>
nnoremap <C-k> <C-w><C-k>
nnoremap <C-l> <C-w><C-l>
nnoremap \tt <Esc>:tabe term:///bin/bash<Enter>:set nonu nornu<Enter>a
nnoremap \tv <Esc>:vs term:///bin/bash<Enter>:set nonu nornu<Enter>a
nnoremap \ts <Esc>:sp term:///bin/bash<Enter>:set nonu nornu<Enter>a

" tnoremap
"tnoremap jk <C-\><C-n>
tnoremap <Esc> <C-\><C-n>
tnoremap \<Esc> <Esc>
